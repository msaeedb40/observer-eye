                    "title": "Core Metrics API",
                    "version": "1.0.0"
                },
                "paths": {
                    "/api/v1/core/metrics/": {
                        "get": {
                            "summary": "List metrics",
                            "responses": {
                                "200": {
                                    "description": "List of metrics"
                                }
                            }
                        },
